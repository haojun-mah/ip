<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="400.0" minWidth="350.0"
            prefHeight="600.0" prefWidth="450.0"
            style="-fx-background-color: #FAFAFA;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="audrey.Main">
    <children>
        <TextField fx:id="userInput"
                   promptText="Type your message here..."
                   style="-fx-background-radius: 25; -fx-border-radius: 25; -fx-padding: 10 15 10 15; 
                          -fx-font-size: 14px; -fx-background-color: white; 
                          -fx-border-color: #E1BEE7; -fx-border-width: 2;"
                   onAction="#handleUserInput"
                   prefHeight="45.0"
                   AnchorPane.bottomAnchor="10.0" 
                   AnchorPane.leftAnchor="10.0" 
                   AnchorPane.rightAnchor="90.0" />
        <Button fx:id="sendButton"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="45.0"
                prefWidth="70.0"
                style="-fx-background-radius: 25; -fx-background-color: #E1BEE7; 
                       -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"
                text="Send"
                AnchorPane.bottomAnchor="10.0" 
                AnchorPane.rightAnchor="10.0" />
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    hvalue="1.0"
                    style="-fx-background-color: transparent; -fx-background: transparent;"
                    vvalue="1.0"
                    AnchorPane.topAnchor="10.0" 
                    AnchorPane.bottomAnchor="70.0" 
                    AnchorPane.leftAnchor="10.0" 
                    AnchorPane.rightAnchor="10.0">
            <content>
                <VBox fx:id="dialogContainer"
                      spacing="8.0"
                      style="-fx-background-color: transparent;">
                    <padding>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
